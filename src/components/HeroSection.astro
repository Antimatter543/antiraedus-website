<style>
  .hero-section {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: #000;
    color: #fff;
    text-align: center;
    overflow: hidden;
  }

  #blackhole-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }
  
  .poem {
    animation: fadeIn 2s ease;
  }
  
  .poem h2 {
    font-size: 3rem;
    margin-bottom: 2rem;
    font-weight: 600;
  }
  
  .poem p {
    font-size: 1.5rem;
    line-height: 2.2rem;
    margin-bottom: 2rem;
    font-style: italic;
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }
  
  .scroll-indicator p {
    font-size: 1rem;
    opacity: 0.7;
    margin-bottom: 0.5rem;
  }
  
  .arrow {
    font-size: 1.5rem;
    animation: bounce 2s infinite;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-20px); }
    60% { transform: translateY(-10px); }
  }
</style>

<script>
  import { BlackHoleAnimation } from '../utils/blackhole-animation.js';

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new BlackHoleAnimation('blackhole-canvas');
  });
</script>

<section id="home" class="hero-section">
  <canvas id="blackhole-canvas"></canvas>
  <div class="container">
    <div class="dreams-content">
      <div class="dreams-image-container">
        <img src="/images/dreams.png" alt="Dreams visualization" class="dreams-image" />
      </div>
      <div class="scroll-indicator">
        <p>Scroll to explore</p>
        <div class="arrow">â†“</div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: #000;
    color: #fff;
    text-align: center;
    overflow: hidden;
  }

  #blackhole-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
    height: 90vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .dreams-content {
    animation: fadeIn 2s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .dreams-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
    max-width: 100%;
  }

  .dreams-image {
    max-width: 98%;
    max-height: 85vh;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    animation: dreamFloat 3s ease-in-out infinite alternate;
  }
  
  
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }
  
  .scroll-indicator p {
    font-size: 1rem;
    opacity: 0.7;
    margin-bottom: 0.5rem;
  }
  
  .arrow {
    font-size: 1.5rem;
    animation: bounce 2s infinite;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes dreamFloat {
    0% { 
      transform: translateY(0px) scale(1);
      filter: brightness(1);
    }
    100% { 
      transform: translateY(-10px) scale(1.02);
      filter: brightness(1.1);
    }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-20px); }
    60% { transform: translateY(-10px); }
  }
</style>

<script>
  import { BlackHoleAnimation } from '../utils/blackhole-animation.js';

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new BlackHoleAnimation('blackhole-canvas');
  });
</script>

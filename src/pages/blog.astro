---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, sorted by publication date
const posts = await getCollection('blog', ({ data }) => {
  // Filter out draft posts in production
  return process.env.NODE_ENV === 'production' ? !data.draft : true;
});

// Sort posts by publication date (newest first)
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog | Antiraedus" description="Read my latest articles and thoughts">
  <div class="blog-container">
    <h1 class="blog-title">Blog</h1>
    <p class="blog-intro">Thoughts, ideas, and everything in between.</p>
      <div class="blog-posts">
      {sortedPosts.map(post => (
        <article class="blog-card">
          {post.data.heroImage && (
            <div class="blog-image">
              <img src={post.data.heroImage} alt={post.data.title} />
            </div>
          )}
          <div class="blog-content">
            <h2 class="blog-card-title">
              <a href={`/blog/${post.slug}`}>{post.data.title}</a>
            </h2>
            <div class="blog-date">{post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}</div>
            <p class="blog-excerpt">{post.data.description}</p>            <div class="blog-categories">
              {post.data.tags && post.data.tags.map((tag: string) => (
                <span class="blog-category">{tag}</span>
              ))}
            </div>
            <a href={`/blog/${post.slug}`} class="read-more">Read more â†’</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .blog-container {
    max-width: 1200px;
    margin: 8rem auto 4rem;
    padding: 0 2rem;
  }
  
  .blog-title {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-heading);
  }
  
  .blog-intro {
    font-size: 1.2rem;
    color: var(--color-text-alt);
    margin-bottom: 3rem;
  }
  
  .blog-posts {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .blog-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: var(--color-bg-alt);
    display: flex;
    flex-direction: row;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }
  
  .blog-image {
    width: 250px;
    height: 200px;
    overflow: hidden;
    flex-shrink: 0;
  }
  
  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .blog-content {
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .blog-date {
    font-size: 0.9rem;
    color: var(--color-text-dim);
    margin-bottom: 1rem;
  }
  
  .blog-card-title {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }
  
  .blog-card-title a {
    color: var(--color-heading);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .blog-card-title a:hover {
    color: var(--primary-color);
  }
  
  .blog-excerpt {
    color: var(--color-text-alt);
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .blog-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }
  
  .blog-category {
    background-color: var(--color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    color: var(--color-primary);
  }
  
  .read-more {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: transform 0.3s ease;
    display: inline-block;
  }
  
  .read-more:hover {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    .blog-container {
      padding: 0 1rem;
    }
    
    .blog-card {
      flex-direction: column;
    }
    
    .blog-image {
      width: 100%;
      height: 200px;
    }
    
    .blog-title {
      font-size: 2.5rem;
    }
  }
</style>

---
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('./blog/*.{md,mdx}');
---

<Layout title="Blog | Antiraedus" description="Read my latest articles and thoughts">
  <div class="blog-container">
    <h1 class="blog-title">Blog</h1>
    <p class="blog-intro">Thoughts, ideas, and tutorials on web development, design, and more.</p>
    
    <div class="blog-posts">
      {posts.map(post => (
        <article class="blog-card">
          {post.frontmatter.image && (
            <div class="blog-image">
              <img src={post.frontmatter.image} alt={post.frontmatter.title} />
            </div>
          )}
          <div class="blog-content">
            <div class="blog-date">{new Date(post.frontmatter.publishDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}</div>
            <h2 class="blog-card-title">
              <a href={post.url}>{post.frontmatter.title}</a>
            </h2>
            <p class="blog-excerpt">{post.frontmatter.description}</p>
            <div class="blog-categories">
              {post.frontmatter.tags && post.frontmatter.tags.map((tag: string) => (
                <span class="blog-category">{tag}</span>
              ))}
            </div>
            <a href={post.url} class="read-more">Read more â†’</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .blog-container {
    max-width: 1200px;
    margin: 8rem auto 4rem;
    padding: 0 2rem;
  }
  
  .blog-title {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .blog-intro {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
  }
  
  .blog-posts {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .blog-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }
  
  .blog-image {
    height: 200px;
    overflow: hidden;
  }
  
  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .blog-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .blog-date {
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 0.5rem;
  }
  
  .blog-card-title {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  
  .blog-card-title a {
    color: #333;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .blog-card-title a:hover {
    color: #64ffda;
  }
  
  .blog-excerpt {
    color: #555;
    margin-bottom: 1rem;
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .blog-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .blog-category {
    background-color: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    color: #333;
  }
  
  .read-more {
    color: #64ffda;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: transform 0.3s ease;
    display: inline-block;
  }
  
  .read-more:hover {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    .blog-posts {
      grid-template-columns: 1fr;
    }
    
    .blog-title {
      font-size: 2.5rem;
    }
  }
</style>

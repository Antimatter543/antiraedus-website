---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Antiraedus | Portfolio", 
  description = "Personal portfolio website featuring projects, blogs, and more." 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* Primary space theme colors */
		--primary-color: #64ffda;
		--secondary-color: #a855f7;
		--accent-color: #f59e0b;
		
		/* Dark theme colors */
		--color-bg: #0a0a1a;
		--color-bg-alt: #1a1a2e;
		--color-bg-card: #16213e;
		--color-text: #a8b2d1;
		--color-text-alt: #8892b0;
		--color-text-dim: #64748b;
		--color-heading: #e2e8f0;
		--color-border: #2a2a3e;
		
		/* Compatibility with existing code */
		--bg-color: var(--color-bg);
		--text-color: var(--color-text);
		--heading-color: var(--color-heading);
	}
	
	/* Light theme */
	[data-theme="light"] {
		--primary-color: #0891b2;
		--secondary-color: #7c3aed;
		--accent-color: #ea580c;
		
		--color-bg: ##f7f2ec;
		--color-bg-alt: #f8fafc;
		--color-bg-card: #f1f5f9;
		--color-text: #1e293b;
		--color-text-alt: #475569;
		--color-text-dim: #64748b;
		--color-heading: #0f172a;
		--color-border: #e2e8f0;
		
		/* Compatibility */
		--bg-color: var(--color-bg);
		--text-color: var(--color-text);
		--heading-color: var(--color-heading);
	}
  
	html {
		scroll-behavior: smooth;
		scroll-padding-top: 80px;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		color: var(--color-text);
		background-color: var(--color-bg);
		display: flex;
		flex-direction: column;
	}
	
	h1, h2, h3, h4, h5, h6 {
		color: var(--color-heading);
	}
	
	main {
		width: 100%;
		margin-top: 0;
		flex: 1;
	}
	
	/* Reset default margin and padding for common elements */
	*, *::before, *::after {
		box-sizing: border-box;
	}
	
	img {
		max-width: 100%;
		height: auto;
	}
	
	/* Global link styling */
	a {
		transition: all 0.2s ease;
	}
	
	/* Content links (in markdown content) */
	.blog-content a,
	.project-content a,
	.content a {
		color: var(--primary-color);
		text-decoration: none;
		border-bottom: 1px solid var(--primary-color);
		font-weight: 500;
		transition: all 0.2s ease;
	}
	
	.blog-content a:hover,
	.project-content a:hover,
	.content a:hover {
		opacity: 0.8;
		transform: translateY(-1px);
	}
	
	.blog-content a:visited,
	.project-content a:visited,
	.content a:visited {
		color: var(--secondary-color);
		border-bottom-color: var(--secondary-color);
	}
	
	/* Blockquote styling */
	blockquote {
		margin: 1.5rem 0;
		padding: 1rem 0 1rem 1.5rem;
		border-left: 4px solid var(--accent-color);
		background: transparent;
		font-style: italic;
		color: var(--color-text-alt);
		position: relative;
	}
	
	blockquote p {
		margin: 0;
	}
</style>

---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Antiraedus | Portfolio", 
  description = "Personal portfolio website featuring projects, blogs, and more." 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* Primary space theme colors */
		--primary-color: #64ffda;
		--secondary-color: #a855f7;
		--accent-color: #f59e0b;
		
		/* Background colors */
		--color-bg: #0a0a1a;
		--color-bg-alt: #1a1a2e;
		--color-bg-card: #16213e;
		
		/* Text colors - softer, less harsh */
		--color-text: #a8b2d1;
		--color-text-alt: #8892b0;
		--color-text-dim: #64748b;
		--color-heading: #e2e8f0;
		
		/* Compatibility with existing code */
		--bg-color: var(--color-bg);
		--text-color: var(--color-text);
		--heading-color: var(--color-heading);
	}
  
	html {
		scroll-behavior: smooth;
		scroll-padding-top: 80px;
	}
	
	body {
		font-family: 'Inter', sans-serif;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		color: var(--color-text);
		background-color: var(--color-bg);
	}
	
	h1, h2, h3, h4, h5, h6 {
		color: var(--color-heading);
	}
	
	main {
		width: 100%;
		margin-top: 0;
	}
	
	/* Reset default margin and padding for common elements */
	*, *::before, *::after {
		box-sizing: border-box;
	}
	
	img {
		max-width: 100%;
		height: auto;
	}
</style>

---
import Layout from './Layout.astro';
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  description: string;
  publishDate: string;
  author?: string;
  image?: string;
  tags?: string[];
}>;

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <div class="blog-post">
    <div class="blog-header">
      {frontmatter.image && (
        <div class="blog-image">
          <img src={frontmatter.image} alt={frontmatter.title} />
        </div>
      )}
      <h1>{frontmatter.title}</h1>
      <div class="blog-meta">
        <time datetime={frontmatter.publishDate}>
          {new Date(frontmatter.publishDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {frontmatter.author && <span> • {frontmatter.author}</span>}
      </div>
      {frontmatter.tags && (
        <div class="blog-tags">
          {frontmatter.tags.map((tag: string) => (
            <span class="blog-tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
    
    <div class="blog-content">
      <slot />
    </div>
    
    <div class="blog-footer">
      <a href="/blog" class="back-button">← Back to all posts</a>
    </div>
  </div>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 8rem auto 4rem;
    padding: 0 2rem;
  }
  
  .blog-header {
    margin-bottom: 2rem;
  }
  
  .blog-image {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .blog-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .blog-post h1 {
    font-size: 2.5rem;
    line-height: 1.3;
    color: #333;
    margin-bottom: 1rem;
  }
  
  .blog-meta {
    color: #666;
    margin-bottom: 1rem;
  }
  
  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .blog-tag {
    background-color: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.85rem;
    color: #333;
  }
  
  .blog-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }
  
  .blog-content h2 {
    font-size: 1.8rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .blog-content h3 {
    font-size: 1.4rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .blog-content p {
    margin-bottom: 1.5rem;
  }
  
  .blog-content a {
    color: #64ffda;
    text-decoration: none;
    border-bottom: 1px solid #64ffda;
    transition: opacity 0.2s ease;
  }
  
  .blog-content a:hover {
    opacity: 0.8;
  }
  
  .blog-content ul, .blog-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .blog-content li {
    margin-bottom: 0.5rem;
  }
  
  .blog-content img {
    max-width: 100%;
    border-radius: 4px;
    margin: 1.5rem 0;
  }
  
  .blog-content pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .blog-content code {
    background-color: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
    font-size: 0.9em;
  }
  
  .blog-content blockquote {
    border-left: 4px solid #64ffda;
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
    color: #666;
    font-style: italic;
  }
  
  .blog-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
  }
  
  .back-button {
    display: inline-block;
    color: #64ffda;
    text-decoration: none;
    font-weight: 500;
    transition: transform 0.3s ease;
  }
  
  .back-button:hover {
    transform: translateX(-5px);
  }
  
  @media (max-width: 768px) {
    .blog-post {
      margin-top: 6rem;
    }
    
    .blog-post h1 {
      font-size: 2rem;
    }
  }
</style>
